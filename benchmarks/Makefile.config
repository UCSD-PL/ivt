HOST=$(shell hostname)

ifeq ($(HOST),gokhan-ativ9) # on local
LLVM_SCRIPTS_DIR = $(HOME)/libs/llvm3.7/llvm/scripts
endif

ifeq ($(HOST),safedispatch) # on safedispatch @ goto
LLVM_SCRIPTS_DIR = $(HOME)/rami/chrome/cr33/src/third_party/llvm-3.7/scripts
endif

ifeq ($(HOST),chromebuild) # on chromebuild
LLVM_SCRIPTS_DIR = $(HOME)/src/src/third_party/llvm-3.7/scripts
endif

